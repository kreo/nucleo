{
  "name": "nucleo",
  "version": "1.0.0",
  "description": "nucleo scripts",
  "main": "tasks.js",
  "author": "@kreo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:kreo/nucleo.git"
  },
  "dependencies": {
    "axis": "^0.6.1",
    "browser-sync": "^2.11.2",
    "browserify": "^13.0.0",
    "gulp-jade-globbing": "^0.1.9",
    "gulp-stylus": "^2.3.1",
    "http-server": "^0.9.0",
    "jade": "^1.11.0",
    "jeet": "^6.1.2",
    "kouto-swiss": "^0.12.0",
    "nodemon": "^1.9.1",
    "npm-run-all": "^1.7.0",
    "rupture": "^0.6.1",
    "typographic": "github:corysimmons/typographic"
  },
  "devDependencies": {},
  "bin": {},
  "config": {
    "styles": {
      "source": "source/styles/index.styl",
      "dest": "dist/app.css",
      "opt": {}
    },
    "scripts": {
      "source": "source/scripts/index.js",
      "dest": "dist/app.js",
      "opt": {}
    },
    "port": "9001"
  },
  "scripts": {
    "stylus": "stylus --sourcemap-inline source/styles/index.styl -o dist/app.css",
    "jade": "jade source/markup/* source/markup/**/* -P -o dist",
    "browserify": "browserify -d source/scripts/index.js -o dist/app.js",
    "watch-stylus": "stylus --sourcemap-inline -w source/styles/index.styl -o dist/app.css"
  }
}
